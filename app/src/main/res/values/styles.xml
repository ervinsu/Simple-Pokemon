<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomProgressBarHorizontal" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:scaleY">1</item>
        <item name="android:max">150</item>
        <item name="android:minWidth">100sp</item>
        <item name="android:progressTint">@android:color/black</item>
        <item name="android:progressBackgroundTint">#707070</item>
    </style>

</resources>
